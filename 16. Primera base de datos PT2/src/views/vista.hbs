<div class="jumbotron">
    <h1>Guardar Producto</h1>
    <div class="container">
        <section id="formData">
            <div class="mb-3">
                <label for="title" class="form-label">Email address</label>
                <input id="title" name="title" type="text" class="form-control" placeholder="Nombre del producto">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Email address</label>
                <input id="price" name="price" type="number" class="form-control" placeholder="Precio del producto">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="form-label">Email address</label>
                <input id="thumbnail" name="thumbnail" type="text" class="form-control" placeholder="Link de imagen">
            </div>
            <div class="controls">
                <button id="addList" class="btn btn-primary input-medium pull-right">Enviar</button>
            </div>
        </section>
    </div>
    <br>
    <div id="table">
        {{#if isListEmpty}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>${{this.price}}</td>
                    <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{else}}
        <h3 class="alert alert-warning">No se encontraron productos</h3>
        {{/if}}
    </div>
</div>
<div class="jumbotron">
    <h1>Centro de mensajes</h1>
    <form onsubmit="addMessage();return false">
        <div class="mb-3">
            <input id="email" name="email" type="email" class="form-control" placeholder="pedro@gmail.com" required>
        </div>
        <div id="messages"></div>
        <div class="row my-3">
            <div class="col-11">
                <input type="text" class="form-control" id="mensaje" placeholder="Ingresa un mensaje...">
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </form>
</div>