extends layouts/index
block main
    div
        h1="Productos"
        br
        if isProduct 
            table(class="table table-dark")
                tr 
                    th="Producto" 
                    th="Precio" 
                    th="Imagen"
                each product in products
                    tr 
                        td=product.title
                        td=product.price
                        td 
                            img(src=product.thumbnail alt="Imagen"  width="70")
        else  
            div(class="alert alert-primary" role="alert")
                h3="No hay productos"